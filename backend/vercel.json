{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "../client/**/*",
        "use": "@vercel/static"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server.js"
      },
      {
        "source": "/(.*)",
        "destination": "../client/$1"
      }
    ]
  }
  